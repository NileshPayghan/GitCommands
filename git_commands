# show all branches
git branch --all
OR
git branch -a

# Rename local master branch to main
git branch --move master main OR
git branch -m master main

# delete the master branch 
git push origin --delete master


# checkout the branch
git checkout main

# reset to previous commit
git reset --soft HEAD~1

# create orphan branch
git checkout --orphan branchname # then add, commit and push to newly created branch.


# delete branch
git branch -d branchname

# clone only single branch
git clone --single-branch --branch branch-name remote-url
